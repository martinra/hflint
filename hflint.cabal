    HFlint.Internal.Utils
    HFlint.Internal.TH

    HFlint.Utility.Prelude

  build-depends:
      base > 3 && < 5
    , algebraic-structures
    , composition
    , containers
    , deepseq
    , data-default
    , deepseq
    , dlist
    , monad-loops
    , mtl
    , reflection
    , QuickCheck
    , vector
    , safe
    , smallcheck
    , template-haskell
    , transformers

  extra-libraries:
    flint,
    gf2x,
    gmp,
    mpfr,
    ntl

  include-dirs:
    csrc
  includes:
    flint/flint.h
    flint/fmpq.h
    flint/fmpq_poly.h
    flint/fmpz.h

    flint_define_additionals.h
    flint_define_wrappers.h
  install-includes:
    flint_define_additionals.h
    flint_define_wrappers.h
  c-sources:
    csrc/flint_define_additionals.c
    csrc/flint_define_wrappers.c

  build-tools:         hsc2hs

  GHC-options:
    -Wall
    -fno-warn-orphans
    -fsimpl-tick-factor=500
  cpp-options:
    -fPIC

  hs-source-dirs:      src
  default-language: Haskell2010

